<% unless comment.archived? %>
    <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
        <td>
            <%= link_to "Delete", [comment.article, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                        }, class: "btn btn-primary btn-sm" %>
        </td>
    </tr>
<% end %>
