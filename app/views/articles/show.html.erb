<br>
<div class="container">
  <div class="row">
    <div class="col">

      <div class="card" style="width: 24rem;">
        <div class="card-header">
          <h4 class="card-title"><%= @article.title %></h4>
        </div>
        <div class="card-body">
          <p class="card-text"><%= @article.body %></p>
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary btn-sm" %></li>
          <%= link_to "Destroy", article_path(@article), data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure?"
                          }, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
      
      <br>
      <div class="card" style="width: 24rem;">
        <div class="card-header">
          <h4 class="card-title">Add a comment:</h4>
        </div>
        <div class="card-body">
          <%= render 'comments/form' %>
        </div>
      </div>
    
      <br>
      </div>

      <div class="col">
        <div class="card" style="width: 52rem;">
          <div class="card-header">
            <h4 class="card-title">Comments (<%= @article.comments.count %>)
          </div>
          <div class="card-body">
            <% unless @article.comments.count == 0 %>
              <table class="table table-striped">
              <thead>
              <tr>
                  <th scope="col">Commenter</th>
                  <th scope="col">Comment</th>
                  <th scope="col">Action</th>
              </tr>
              </thead>
              <%= render @article.comments %>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    
    </div>
  </div>
</div>
